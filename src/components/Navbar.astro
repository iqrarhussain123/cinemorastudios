---
const nav = [
  { label: "Services", href: "#services" },
  { label: "Work", href: "#work" },
  { label: "About", href: "#about" },
];

const cta = { label: "Book a Strategy Call", href: "#book" };
---

<header class="fixed top-0 z-50 w-full overflow-x-clip pt-6 sm:pt-10">
  {/* Floating rounded glass header */}
  <div class="w-full px-4">
    <div class="relative mx-auto w-full max-w-[98%] sm:max-w-[96%] md:max-w-[92%] lg:max-w-[78%] xl:max-w-[62%] 2xl:max-w-[50%]">
      <div
        class="relative overflow-hidden rounded-2xl border border-white/10 bg-zinc-950/55 backdrop-blur-xl shadow-lg shadow-black/30 [transform:translateZ(0)]"
      >
        {/* subtle glow line */}
        <div
          class="pointer-events-none absolute left-6 right-6 -bottom-px h-px bg-gradient-to-r from-transparent via-lime-400/50 to-transparent"
        >
        </div>

        <div
          class="flex items-center justify-between gap-3 px-3 py-2 sm:gap-4 sm:px-4 sm:py-3"
        >
          {/* Left: Logo */}
          <a href="#" class="group flex items-center gap-3">
            <div
              class="h-8 w-8 overflow-hidden rounded-xl bg-lime-400 shadow-lg shadow-lime-400/15 transition group-hover:brightness-110 sm:h-10 sm:w-10"
            >
              <img
                src="/images/logo.png"
                alt="Cinemora Studios"
                class="h-full w-full object-contain"
                loading="eager"
              />
            </div>

            <div class="leading-tight">
              <span
                class="whitespace-nowrap text-[11px] font-semibold text-white font-heading sm:text-xs md:text-sm"
              >
                CINEMORA STUDIOS
              </span>

              <div class="hidden text-[9px] text-white/55 sm:text-[10px] md:block md:text-xs font-body">
                We turn attention into clients.
              </div>
            </div>
          </a>
          {/* Center: Desktop nav */}
          <nav class="hidden items-center gap-1 sm:flex md:gap-2">
            {
              nav.map((item) => (
                <a
                  href={item.href}
                  class="rounded-full px-2 py-1.5 text-[11px] font-body font-medium text-white/70 transition hover:bg-white/5 hover:text-white sm:px-2.5 md:px-3 md:py-2 md:text-xs lg:px-4 lg:text-sm"
                >
                  {item.label}
                </a>
              ))
            }
          </nav>

          {/* Right: CTA + Mobile button */}
          <div class="flex items-center gap-2">
            <a
              href={cta.href}
              onclick="gtag('event', 'contact_click', { 'method': 'navbar_book_call' })"
              class="hidden whitespace-nowrap rounded-full bg-lime-400 px-3 py-1.5 text-[11px] font-body font-medium text-zinc-950 shadow-lg shadow-lime-400/20 transition hover:brightness-110 sm:inline-flex md:px-4 md:py-2 md:text-xs lg:px-5 lg:py-2.5 lg:text-sm"
            >
              <span class="hidden lg:inline">{cta.label}</span>
              <span class="lg:hidden">Book a Call</span>
            </a>

            {/* Mobile menu button */}
            <button
              id="navToggle"
              class="inline-flex h-9 w-9 items-center justify-center rounded-xl border border-white/10 bg-white/5 text-white/80 transition hover:bg-white/10 sm:hidden"
              aria-label="Open menu"
              aria-expanded="false"
              type="button"
            >
              <svg
                viewBox="0 0 24 24"
                class="h-5 w-5"
                aria-hidden="true"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
              >
                <path d="M4 7h16"></path>
                <path d="M4 12h16"></path>
                <path d="M4 17h16"></path>
              </svg>
            </button>
          </div>
        </div>

        {/* Mobile dropdown */}
        <div id="mobileNav" class="hidden sm:hidden mt-2">
          <div class="px-0 pb-2">
            <div
              class="rounded-2xl border border-white/10 bg-zinc-950/90 p-2 backdrop-blur-xl"
            >
              <div class="flex flex-col">
                {
                  nav.map((item) => (
                    <a
                      href={item.href}
                      class="rounded-xl px-4 py-3 text-sm font-medium text-white/80 transition hover:bg-white/5"
                    >
                      {item.label}
                    </a>
                  ))
                }

                <a
                  href={cta.href}
                  class="mt-2 rounded-xl bg-lime-400 px-4 py-3 text-center text-sm font-semibold text-zinc-950 shadow-lg shadow-lime-400/20 transition hover:brightness-110"
                >
                  {cta.label}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {/* Toggle script */}
  <script is:inline>
    const btn = document.getElementById("navToggle");
    const menu = document.getElementById("mobileNav");

    btn?.addEventListener("click", () => {
      const isOpen = btn.getAttribute("aria-expanded") === "true";
      btn.setAttribute("aria-expanded", String(!isOpen));
      menu.classList.toggle("hidden");
    });

    // Close on link click (mobile)
    menu?.querySelectorAll("a").forEach((a) => {
      a.addEventListener("click", () => {
        menu.classList.add("hidden");
        btn.setAttribute("aria-expanded", "false");
      });
    });
  </script>
</header>
