      display: none;
    }

    .mobile-step {
      position: relative;
      z-index: 1;
      opacity: 0;
      transform: translateY(14px);
      transition:
        opacity 600ms ease,
        transform 600ms ease;
    }

    .mobile-step-icon {
      color: #a1a1aa;
      transition:
        color 500ms ease,
        box-shadow 500ms ease,
        transform 500ms ease;
    }

    .mobile-step-svg {
      transition: filter 500ms ease;
    }

    .mobile-step-title,
    .mobile-step-desc,
    .mobile-step-eyebrow {
      transition: color 500ms ease;
