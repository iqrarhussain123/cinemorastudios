    @import url("https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,700;0,900;1,700&family=Outfit:wght@300;400;600;700&display=swap");

    @keyframes blur-reveal {
      from {
        filter: blur(20px);
        opacity: 0;
        transform: translateY(20px) scale(0.95);
      }
      to {
        filter: blur(0);
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .reveal-premium {
      animation: blur-reveal 1.5s cubic-bezier(0.19, 1, 0.22, 1) forwards;
    }

    .headline-premium {
      font-family: "Playfair Display", serif;
      letter-spacing: -0.01em;
    }

    @keyframes fade-in-right {
      from {
        opacity: 0;
        transform: translateX(30px);
        filter: blur(10px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
        filter: blur(0);
      }
    }

    @keyframes float-breathing {
      0%,
      100% {
        transform: translateY(0) scale(1);
      }
      50% {
        transform: translateY(-10px) scale(1.01);
      }
    }

    @keyframes spring-up {
      0% {
        opacity: 0;
        transform: translateY(50px) scale(0.9);
      }
      60% {
        transform: translateY(-5px) scale(1.02);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    @keyframes glow-line {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    .unified-glow-container {
      position: relative;
      background: #0a0a0a;
      transition: all 0.8s cubic-bezier(0.19, 1, 0.22, 1);
    }

    /* Hinter Glow / Background Separation */
    .unified-glow-container::before {
      content: "";
      position: absolute;
      inset: -2px;
      padding: 2px;
      border-radius: 4rem;
      background: linear-gradient(
        135deg,
        rgba(163, 230, 53, 0.2) 0%,
        rgba(255, 255, 255, 0.05) 50%,
        rgba(163, 230, 53, 0.1) 100%
      );
      mask:
        linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
      -webkit-mask:
        linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
      mask-composite: exclude;
      -webkit-mask-composite: destination-out;
      opacity: 0.5;
      transition: opacity 0.8s ease;
      pointer-events: none;
    }

    .unified-glow-container::after {
      content: "";
      position: absolute;
      inset: -50px;
      background: radial-gradient(
        circle at 50% 50%,
        rgba(163, 230, 53, 0.03) 0%,
        transparent 70%
      );
      opacity: 0.8;
      z-index: -1;
      pointer-events: none;
    }

    .unified-glow-container:hover::before {
      opacity: 1;
    }

    .unified-glow-container:hover {
      box-shadow:
        0 20px 80px -20px rgba(0, 0, 0, 0.5),
        0 0 40px -10px rgba(163, 230, 53, 0.05);
    }

    .shimmer-badge {
      background: linear-gradient(
        90deg,
        rgba(24, 24, 27, 0.5) 0%,
        rgba(39, 39, 42, 0.6) 50%,
        rgba(24, 24, 27, 0.5) 100%
      );
      background-size: 200% 100%;
      animation: glow-line 3s linear infinite;
    }

    .headline-reveal-trigger {
      opacity: 0;
      transform: translateY(30px);
      transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .headline-reveal-trigger.is-visible {
      opacity: 1;
      transform: translateY(0);
    }
    @keyframes testimonial-border-flow {
      0% {
        border-color: rgba(163, 230, 53, 0.1);
        box-shadow: 0 0 0 rgba(163, 230, 53, 0);
      }
      50% {
        border-color: rgba(163, 230, 53, 0.4);
        box-shadow: 0 0 30px rgba(163, 230, 53, 0.1);
      }
      100% {
        border-color: rgba(163, 230, 53, 0.1);
        box-shadow: 0 0 0 rgba(163, 230, 53, 0);
      }
    }

    .testimonial-card-premium {
      transition: all 0.6s cubic-bezier(0.19, 1, 0.22, 1);
      animation: testimonial-border-flow 4s ease-in-out infinite;
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
    }

    .testimonial-card-premium:hover {
      transform: translateY(-8px) scale(1.02);
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(163, 230, 53, 0.6);
    }

    .quote-mark-reveal {
      animation: spring-up 1s ease-out forwards;
    }

    .animate-text-reveal {
      display: inline-block;
      overflow: hidden;
      vertical-align: bottom;
    }

    .animate-text-reveal span {
      display: inline-block;
      transform: translateY(110%);
      animation: text-surge 1s cubic-bezier(0.19, 1, 0.22, 1) forwards;
    }

    @keyframes text-surge {
      to {
        transform: translateY(0);
      }
    }

    .delay-text-1 {
