/**
 * VideoEmbed
 * Usage:
 * <VideoEmbed provider="youtube" id="VIDEO_ID" title="..." />
 * <VideoEmbed provider="vimeo" id="VIMEO_ID" title="..." />
 */
const {
  provider = "youtube",
  id,
  title = "Video",
} = Astro.props;

if (!id) throw new Error("VideoEmbed requires an 'id' prop.");

const src =
  provider === "vimeo"
    ? `https://player.vimeo.com/video/${id}?title=0&byline=0&portrait=0`
    : `https://www.youtube.com/embed/${id}?rel=0&modestbranding=1`;
---

<div class="relative overflow-hidden rounded-2xl border border-zinc-800 bg-zinc-950">
  <div class="aspect-video w-full">
    <iframe
      class="h-full w-full"
      src={src}
      title={title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen
    ></iframe>
  </div>

  <!-- Cinemora lime overlay -->
  <div class="hero-video-overlay pointer-events-none absolute inset-0"></div>
</div>
