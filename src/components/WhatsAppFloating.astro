---
import heroData from "../data/hero.json";

const { whatsappCta } = heroData;
---

<a
  href={whatsappCta.href}
  target="_blank"
  rel="noopener"
  class="whatsapp-float group inline-flex items-center gap-2 rounded-xl bg-[#25D366] px-5 py-2.5 text-sm font-body font-semibold text-white shadow-[0_10px_28px_-12px_rgba(37,211,102,0.9)] transition-transform duration-300 hover:scale-[1.02] active:scale-[0.98]"
  aria-label={whatsappCta.label}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 32 32"
    class="h-7 w-7"
    aria-hidden="true"
    fill="currentColor"
  >
    <path
      d="M19.11 17.13c-.3-.15-1.78-.88-2.05-.98-.27-.1-.47-.15-.67.15s-.77.98-.95 1.18-.35.22-.65.07a8.19 8.19 0 0 1-2.4-1.48 9 9 0 0 1-1.65-2.05c-.17-.3 0-.46.13-.62.14-.14.3-.35.45-.52.15-.17.2-.3.3-.5.1-.2.05-.37-.03-.52-.08-.15-.67-1.62-.92-2.22-.24-.58-.48-.5-.67-.5h-.57c-.2 0-.52.07-.8.37s-1.05 1.02-1.05 2.5 1.08 2.9 1.23 3.1c.15.2 2.13 3.26 5.17 4.57.72.31 1.28.5 1.72.64.72.23 1.37.2 1.88.12.57-.08 1.78-.73 2.03-1.43.25-.7.25-1.3.17-1.43-.08-.12-.27-.2-.57-.35Z"
    ></path>
    <path
      d="M16.02 3.5c-6.9 0-12.52 5.61-12.52 12.5 0 2.2.58 4.34 1.68 6.23L3.5 28.5l6.44-1.68a12.5 12.5 0 0 0 6.08 1.56h.01c6.9 0 12.5-5.61 12.5-12.5S22.92 3.5 16.02 3.5Zm0 22.88h-.01a10.4 10.4 0 0 1-5.3-1.46l-.38-.22-3.82 1 1.02-3.72-.24-.38a10.42 10.42 0 1 1 8.73 4.78Z"
    ></path>
