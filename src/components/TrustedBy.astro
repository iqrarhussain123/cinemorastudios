---
const stats = [
  { value: "50+ ", label: "Brands trusted" },
  { value: "3.5M+", label: "Views generated" },
  { value: "20K+", label: "Leads captured" },
  { value: "30%+", label: "Avg engagement" },
];

const logos = [
  "Upwork",
  "Spoken",
  "Digitas",
  "CH",
  "Hobnob",
  "Fiver Real Estate",
];
---

<section class="relative w-full border-y border-white/10 bg-black/30">
  <div class="mx-auto max-w-6xl px-4 py-6">
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">

      <!-- Left: Trusted by + logos -->
      <div class="flex flex-col gap-3">
        <div class="flex items-center gap-3">
          <span class="h-2 w-2 rounded-full bg-lime-400 shadow-[0_0_18px_rgba(183,255,42,0.6)]"></span>
          <p class="text-sm text-white/70">
            Trusted by <span class="text-white font-semibold">50+ brands</span>
          </p>
        </div>

        <div class="flex flex-wrap items-center gap-x-6 gap-y-2">
          {logos.map((l) => (
            <span class="text-sm text-white/55 hover:text-white/80 transition">
              {l}
            </span>
          ))}
        </div>
      </div>

      <!-- Right: stats -->
      <div class="grid grid-cols-2 gap-3 sm:grid-cols-4">
        {stats.map((s) => (
          <div class="rounded-xl border border-white/10 bg-white/5 px-4 py-3">
            <p class="text-lg font-semibold text-white">
              <span class="text-lime-400">{s.value}</span>
            </p>
            <p class="text-xs text-white/60">{s.label}</p>
          </div>
        ))}
      </div>

    </div>
  </div>
</section>
