<script>
    const carousel = document.getElementById("reviews-carousel");
    const dots = document.querySelectorAll(".nav-dot");
    const cards = document.querySelectorAll(".review-card");

    const updateActiveState = () => {
        if (!carousel) return;
        const slideWidth = carousel.clientWidth;
        const scrollLeft = carousel.scrollLeft;
        const currentIndex = Math.round(scrollLeft / slideWidth);

        // Map 13 reviews to 3 dots (0-4 = dot 0, 5-8 = dot 1, 9-12 = dot 2)
        let activeDotIndex = 0;
        if (currentIndex >= 9) activeDotIndex = 2;
        else if (currentIndex >= 5) activeDotIndex = 1;
        else activeDotIndex = 0;

        // Update Dots
        dots.forEach((dot, i) => {
            if (i === activeDotIndex) {
                dot.className =
                    "nav-dot h-2 rounded-full transition-all duration-500 w-8 bg-lime-400 shadow-[0_0_15px_rgba(163,230,53,0.5)] cursor-pointer";
            } else {
                dot.className =
                    "nav-dot h-2 rounded-full transition-all duration-500 w-2 bg-white/20 hover:bg-white/40 cursor-pointer";
            }
        });

        // Update Cards (Scale/Opacity effect)
        cards.forEach((card, i) => {
            if (i === currentIndex) {
                card.classList.remove("opacity-40", "scale-90", "blur-sm");
                card.classList.add("opacity-100", "scale-100", "blur-0");
            } else {
                card.classList.remove("opacity-100", "scale-100", "blur-0");
                card.classList.add("opacity-40", "scale-90", "blur-sm");
            }
        });
    };

    const scrollToIndex = (index: number) => {
        if (!carousel) return;
        const slideWidth = carousel.clientWidth;
        carousel.scrollTo({
            left: slideWidth * index,
            behavior: "smooth",
        });
    };

    if (carousel) {
        carousel.addEventListener("scroll", () => {
            updateActiveState();
        });

        // Click listeners for dots - map to review groups
        dots.forEach((dot, dotIndex) => {
            dot.addEventListener("click", () => {
                stopAutoPlay();
                // Map dots to review indices: dot 0 = review 0, dot 1 = review 5, dot 2 = review 9
                const targetIndex = dotIndex === 0 ? 0 : dotIndex === 1 ? 5 : 9;
                scrollToIndex(targetIndex);
            });
        });

        // Auto-Play
        let autoPlayInterval = setInterval(() => {
            const slideWidth = carousel.clientWidth;
            // Move logic...
            const index = Math.round(carousel.scrollLeft / slideWidth);
            const nextIndex = (index + 1) % cards.length;
            scrollToIndex(nextIndex);
        }, 6000);

        const stopAutoPlay = () => clearInterval(autoPlayInterval);

        carousel.addEventListener("mousedown", stopAutoPlay);
        carousel.addEventListener("touchstart", stopAutoPlay);

        // Initial call
        updateActiveState();
    }
</script>
