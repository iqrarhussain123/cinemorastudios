<section class="relative pt-24 pb-0 bg-black z-30">
    <!-- Rotating Badge (Center Seam) -->

    <div class="text-center mb-16 px-4">
        <h2 class="text-4xl md:text-5xl font-bold text-white tracking-tight">
            What our clients are <span
                class="font-serif italic font-thin text-lime-300">saying.</span
            >
        </h2>
        <div class="mt-5 mb-5 opacity-80">
            <span
                class="text-lg font-semibold tracking-widest text-white uppercase font-sans align-middle text-center"
                >About Cinemora Studios</span
            >
        </div>
    </div>

    <div class="relative max-w-[85%] mx-auto px-4 group z-10">
        <!-- Carousel Container -->
        <div
            id="reviews-carousel"
            class="flex overflow-x-auto snap-x snap-mandatory scrollbar-hide gap-0 pb-12"
            style="scroll-behavior: smooth; -ms-overflow-style: none; scrollbar-width: none;"
        >
            <!-- Review 1 -->
            <div
                class="min-w-full snap-center flex flex-col items-center justify-center text-center px-4 transition-opacity duration-500"
            >
                <blockquote
                    class="text-xl md:text-3xl font-serif italic text-zinc-200 leading-relaxed max-w-3xl mb-10"
                >
                    "These guys are the real deal. Effective, efficient, and a
                    pleasure to work with. Dan quickly understood and was able
                    to help us better articulate the nuances of our business."
                </blockquote>
                <div class="flex flex-col items-center">
                    <div
                        class="w-14 h-14 rounded-full overflow-hidden bg-zinc-800 mb-4 border border-white/10"
                    >
                        <img
                            src="https://framerusercontent.com/images/2SG2YtGYMAFSLxtZQdyf06GJeU.png?scale-down-to=512"
                            alt="Jordan Feder"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <div class="text-white font-bold">Jordan Feder</div>
                    <div class="text-sm text-zinc-500">VC at GE Ventures</div>
                </div>
            </div>

            <!-- Review 2 -->
            <div
                class="min-w-full snap-center flex flex-col items-center justify-center text-center px-4 transition-opacity duration-500"
            >
                <div class="mb-8 opacity-80">
                    <span
                        class="text-lg font-bold tracking-widest text-white uppercase font-sans"
                        >TECHFLOW</span
                    >
                </div>
                <blockquote
                    class="text-xl md:text-3xl font-serif italic text-zinc-200 leading-relaxed max-w-3xl mb-10"
                >
                    "Cinemora's team completely revamped our ad strategy. The
                    creative output is consistently high-quality and the results
                    speak for themselves. We've seen a 3x ROAS increase."
                </blockquote>
                <div class="flex flex-col items-center">
                    <div
                        class="w-14 h-14 rounded-full overflow-hidden bg-zinc-800 mb-4 border border-white/10"
                    >
                        <img
                            src="https://framerusercontent.com/images/MXGhdOCjqMV4qWQWzwqR64ap4CE.png?scale-down-to=512"
                            alt="Alex Chen"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <div class="text-white font-bold">Alex Chen</div>
                    <div class="text-sm text-zinc-500">CMO at TechFlow</div>
                </div>
            </div>

            <!-- Review 3 -->
            <div
                class="min-w-full snap-center flex flex-col items-center justify-center text-center px-4 transition-opacity duration-500"
            >
                <div class="mb-8 opacity-80">
                    <span
                        class="text-lg font-bold tracking-widest text-white uppercase font-sans"
                        >APEX REALTY</span
                    >
                </div>
                <blockquote
                    class="text-xl md:text-3xl font-serif italic text-zinc-200 leading-relaxed max-w-3xl mb-10"
                >
                    "Finally an agency that understands luxury aesthetics. The
                    content systems they built for us have become our biggest
                    lead magnet. Highly recommended."
                </blockquote>
                <div class="flex flex-col items-center">
                    <div
                        class="w-14 h-14 rounded-full overflow-hidden bg-zinc-800 mb-4 border border-white/10"
                    >
                        <img
                            src="https://framerusercontent.com/images/V0M3J8BygkAJWol7DpZzVLVD3PI.png?scale-down-to=512"
                            alt="Sarah Miller"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <div class="text-white font-bold">Sarah Miller</div>
                    <div class="text-sm text-zinc-500">
                        Director at Apex Realty
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation dots moved to intersection area below -->
    </div>

    <!-- Background Wrapper (Limited to Black Section) -->
    <div
        class="absolute top-0 left-0 w-full h-[70%] overflow-hidden pointer-events-none"
    >
        <!-- Cinematic Horizon Background -->
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[1000px] h-[1000px] opacity-20 z-[-1] [mask-image:radial-gradient(circle_at_center,black_40%,transparent_70%)] mt-24"
        >
            <svg
                viewBox="0 0 600 600"
                class="w-full h-full text-lime-400"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
            >
                <!-- Inner Circle -->
                <circle cx="300" cy="300" r="100" class="opacity-30"></circle>
                <!-- Dashed Orbit -->
                <circle
                    cx="300"
                    cy="300"
                    r="160"
                    class="opacity-50"
                    stroke-dasharray="10 10"></circle>
                <!-- Angled Large Orbits -->
                <ellipse
                    cx="300"
                    cy="300"
                    rx="280"
                    ry="100"
                    class="origin-center rotate-45 opacity-40"></ellipse>
                <ellipse
                    cx="300"
                    cy="300"
                    rx="280"
                    ry="100"
                    class="origin-center -rotate-45 opacity-40"></ellipse>
                <!-- Crosshairs -->
                <path
                    d="M300 50 L300 550 M50 300 L550 300"
                    class="opacity-10"
                    stroke-width="1"></path>
            </svg>
        </div>
    </div>

    <!-- Navigation Dots (Positioned above the disc) -->
    <div
        class="flex justify-center items-center gap-3 mt-12 mb-40 relative z-40"
    >
        <button
            class="nav-dot h-2 rounded-full transition-all duration-500 w-8 bg-lime-400 shadow-[0_0_15px_rgba(163,230,53,0.5)]"
            aria-label="Go to slide 1"></button>
        <button
            class="nav-dot h-2 rounded-full transition-all duration-500 w-2 bg-white/20 hover:bg-white/40"
            aria-label="Go to slide 2"></button>
        <button
            class="nav-dot h-2 rounded-full transition-all duration-500 w-2 bg-white/20 hover:bg-white/40"
            aria-label="Go to slide 3"></button>
    </div>

    <!-- CTA Section (Green) -->
    <div
        class="relative w-full bg-lime-400 py-32 md:py-40 flex flex-col items-center justify-center text-center"
    >
        <!-- Rotating Badge (Intersection) -->
        <div
            class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 z-20"
        >
            <div
                class="animate-[spin_10s_linear_infinite] w-32 h-32 md:w-40 md:h-40 rounded-full bg-black flex items-center justify-center border border-white/10 relative shadow-2xl shadow-lime-900/20"
            >
                <svg
                    viewBox="0 0 100 100"
                    class="w-full h-full absolute top-0 left-0"
                >
                    <defs>
                        <path
                            id="circlePath"
                            d="M 50, 50 m -37, 0 a 37,37 0 1,1 74,0 a 37,37 0 1,1 -74,0"
                        ></path>
                    </defs>
                    <text
                        font-size="20"
                        fill="white"
                        font-weight="bold"
                        letter-spacing="2"
                        class="uppercase"
                    >
                        <textPath href="#circlePath" startOffset="0%">
                            CONVERT • GROW • OPTIMIZE •
                        </textPath>
                    </text>
                </svg>
                <!-- Globe Icon Center -->
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    class="text-lime-400"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><circle cx="12" cy="12" r="10"></circle><line
                        x1="2"
                        y1="12"
                        x2="22"
                        y2="12"></line><path
                        d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
                    ></path></svg
                >
            </div>
        </div>
        <div class="relative z-10 pt-20 px-10 py-4">
            <div
                class="text-xs font-bold tracking-[0.2em] mb-6 text-black uppercase"
            >
                Let's Orbit
            </div>
            <h2
                class="text-4xl md:text-6xl font-bold text-black mb-10 max-w-3xl mx-auto leading-tight"
            >
                Let us help your company accelerate <span
                    class="font-serif italic font-normal">years ahead.</span
                >
            </h2>
            <button
                class="px-8 py-3 rounded-full border border-black/20 bg-transparent text-black font-semibold text-lg hover:bg-black hover:text-lime-400 transition-colors duration-300 cursor-pointer"
            >
                Contact Us
            </button>
        </div>
    </div>

    <script>
        const carousel = document.getElementById("reviews-carousel");
        const dots = document.querySelectorAll(".nav-dot");

        const updateActiveDot = () => {
            if (!carousel) return;
            const slideWidth = carousel.clientWidth;
            const scrollLeft = carousel.scrollLeft;
            const index = Math.round(scrollLeft / slideWidth);

            dots.forEach((dot, i) => {
                if (i === index) {
                    // Active State: Wide, Lime, Glow
                    dot.className =
                        "nav-dot h-2 rounded-full transition-all duration-500 w-8 bg-lime-400 shadow-[0_0_15px_rgba(163,230,53,0.5)]";
                } else {
                    // Inactive State: Small, Dim
                    dot.className =
                        "nav-dot h-2 rounded-full transition-all duration-500 w-2 bg-white/20 hover:bg-white/40";
                }
            });
        };

        const scrollToIndex = (index: number) => {
            if (!carousel) return;
            const slideWidth = carousel.clientWidth;
            carousel.scrollTo({
                left: slideWidth * index,
                behavior: "smooth",
            });
        };

        if (carousel) {
            carousel.addEventListener("scroll", updateActiveDot);

            // Click listeners for dots
            dots.forEach((dot, index) => {
                dot.addEventListener("click", () => {
                    stopAutoPlay();
                    scrollToIndex(index);
                });
            });

            // Auto-Play
            let autoPlayInterval = setInterval(() => {
                const slideWidth = carousel.clientWidth;
                const maxScroll = carousel.scrollWidth - slideWidth;

                // Check if we are at the end
                if (carousel.scrollLeft >= maxScroll - 10) {
                    carousel.scrollTo({ left: 0, behavior: "smooth" });
                } else {
                    carousel.scrollBy({ left: slideWidth, behavior: "smooth" });
                }
            }, 5000);

            const stopAutoPlay = () => clearInterval(autoPlayInterval);

            carousel.addEventListener("mousedown", stopAutoPlay);
            carousel.addEventListener("touchstart", stopAutoPlay);
        }
    </script>
</section>
