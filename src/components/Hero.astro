---
import heroData from "../data/hero.json";
const {
  primaryCta,
  secondaryCta,
  videoSrc,
  posterSrc,
  typeText,
  headline,
  pillText,
} = heroData;
---

<section class="hero-section hero-bg relative overflow-hidden">
  <div class="relative">
    <div
      class="mx-auto flex w-full max-w-[100%] flex-col px-4 sm:px-6 pt-20 pb-2 sm:pt-32 md:pt-40 lg:pt-48 md:pb-16"
    >
      <!-- top pill -->
      <div
        class="hero-pill hero-reveal-1 mx-auto mb-8 inline-flex w-fit items-center gap-1.5 rounded-full border border-zinc-800/80 bg-zinc-900/50 px-4 py-2 text-sm text-zinc-200 backdrop-blur-md"
      >
        <span class="h-2 w-2 rounded-full bg-lime-400 animate-pulse"></span>
        {pillText}
      </div>

      <!-- Text block -->
      <div class="relative z-10 mx-auto max-w-[92%] px-4 pt-8 pb-0 text-center">
        <!-- Text legibility gradient -->
        <div
          class="absolute inset-0 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-[radial-gradient(circle_closest-side,rgba(0,0,0,0.6)_0%,transparent_100%)] blur-2xl -z-10 pointer-events-none md:hidden"
        >
        </div>
        <h1
          class="hero-title hero-reveal-2 font-heading font-light leading-[1] tracking-tight text-zinc-50 text-2xl sm:text-5xl md:text-7xl lg:text-8xl"
        >
          {headline.line1}
          <span class="text-lime-400 italic font-normal"
            >{headline.highlight1}</span
          ><br />
          {headline.line2}
          <span class="text-lime-400 italic font-normal"
            >{headline.highlight2}</span
          >
        </h1>

        <div
          class="hero-sub hero-reveal-3 mx-auto mt-20 w-full max-w-2xl text-left hidden sm:block"
        >
          <div class="relative w-full">
            <!-- Static Image Background -->
            <img
              src="/images/typing-bar-bg.png"
              alt="AI Input Interface"
              class="w-full rounded-[2rem] shadow-2xl"
              width="672"
              height="120"
              loading="eager"
              decoding="async"
            />

            <!-- Typing Text Overlay -->
            <!-- Typing Text Overlay -->
            <div class="absolute inset-0 flex flex-col">
              <!-- Text Zone (Use smallest spacer possible) -->
              <div class="flex-1 overflow-hidden px-6 pt-5 sm:px-8 sm:pt-6">
                <div
                  class="relative w-full font-body text-sm font-light leading-snug text-zinc-100 sm:text-base md:text-lg"
                >
                  <span id="typing-text" data-text={typeText}></span>
                  <span class="custom-cursor-container">
                    <span class="cursor-beam">
                      <span class="cursor-halo"></span>
                      <span class="cursor-satellite"></span>
                    </span>
                  </span>
                </div>
              </div>

              <!-- Protected Bottom Zone (Tools Area) -->
              <div class="h-12 w-full shrink-0"></div>
            </div>
          </div>
        </div>

        <script is:inline>
          // Typing effect
          const typeEl = document.getElementById("typing-text");
          const typeText = typeEl?.getAttribute("data-text") || "";

          let charIndex = 0;

          if (typeEl && typeText) {
            let isDeleting = false;

            setTimeout(() => {
              const type = () => {
                const current = typeEl.textContent;

                if (!isDeleting && charIndex < typeText.length) {
                  // Typing
                  typeEl.textContent += typeText.charAt(charIndex);
                  charIndex++;
                  setTimeout(type, 30);
                } else if (isDeleting && charIndex > 0) {
                  // Deleting
                  typeEl.textContent = typeText.substring(0, charIndex - 1);
                  charIndex--;
                  setTimeout(type, 15);
                } else {
                  // State Switch
                  isDeleting = !isDeleting;
                  setTimeout(type, isDeleting ? 2000 : 500);
                }
              };
              type();
            }, 500);
          }
        </script>

        <div
          class="hero-ctas hero-reveal-4 mt-14 mb-16 flex flex-col justify-center gap-4 sm:flex-row"
        >
          <!-- Primary Premium Button -->
          <a
            href={primaryCta.href}
            class="group relative inline-flex items-center justify-center gap-2 overflow-hidden rounded-xl bg-gradient-to-r from-lime-400 to-lime-500 px-8 py-3.5 text-base font-body font-medium text-black shadow-[0_0_20px_-5px_rgba(163,230,53,0.4)] transition-all duration-300 hover:scale-105 hover:shadow-[0_0_30px_-5px_rgba(163,230,53,0.6)] md:text-zinc-950"
          >
            <span class="relative z-10">{primaryCta.label}</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="relative z-10 transition-transform duration-300 group-hover:translate-x-1"
              ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
            >
            <div
              class="absolute inset-0 -z-0 bg-gradient-to-r from-white/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100 hidden md:block"
            >
            </div>
          </a>
        </div>

      </div>

      <!-- Big video under text (Thumbnail + Hover-to-play) -->
      <div
        class="hero-video hero-reveal-6 mt-0 w-full px-3 sm:px-6 perspective-1000 relative z-20"
      >
        <div
          id="videoTiltContainer"
          class="group relative mx-auto max-w-[95rem] aspect-video md:aspect-[21/9] lg:aspect-video rounded-[2rem] transition-transform duration-500 ease-out overflow-hidden hero-video-glass"
          style="transform-style: preserve-3d;"
        >
          <video
            id="heroVideo"
            class="relative z-10 h-full w-full object-cover rounded-xl"
            loop
            muted
            playsinline
            preload="metadata"
            poster={posterSrc}
          >
            <source src={videoSrc} type="video/mp4" />
            Your browser does not support the video tag.
          </video>

          <!-- Premium Player UI Overlays -->
          <div
            class="pointer-events-none absolute inset-0 z-20 flex flex-col justify-between p-4 sm:p-6"
          >
            <!-- Top Bar: Badge -->
            <div class="flex items-start justify-between">
              <div
                class="flex items-center gap-1.5 rounded-full border border-white/10 bg-black/40 px-2.5 py-1 backdrop-blur-md"
              >
                <div class="h-1.5 w-1.5 rounded-full bg-red-500 animate-pulse">
                </div>
                <span
                  class="text-[9px] font-bold uppercase tracking-widest text-white/90"
                  >Showreel</span
                >
              </div>
            </div>

            <!-- Bottom Bar: Controls -->
            <div class="flex items-end justify-end gap-2">
              <button
                id="muteToggle"
                class="video-btn video-btn-pill pointer-events-auto group flex items-center gap-2 rounded-full pl-2 pr-3 py-1.5 transition-all duration-300 active:scale-95"
                aria-label="Toggle sound"
              >
                <div class="relative h-4 w-4 text-white">
                  <svg
                    id="iconMuted"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="absolute inset-0 h-full w-full transition-opacity duration-300"
                    ><path d="M11 5L6 9H2v6h4l5 4V5z"></path><line
                      x1="23"
                      x2="1"
                      y1="1"
                      y2="23"></line></svg
                  >
                  <svg
                    id="iconUnmuted"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="absolute inset-0 h-full w-full opacity-0 transition-opacity duration-300"
                    ><polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"
                    ></polygon><path
                      d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"
                    ></path></svg
                  >
                </div>
                <span
                  id="muteText"
                  class="video-btn-label text-xs font-semibold text-white"
                  >Sound On</span
                >
              </button>
            </div>

            <!-- Center Play Button (Big) -->
            <div
              class="absolute inset-0 flex items-center justify-center pointer-events-none z-10 md:hidden"
            >
              <button
                id="centerPlayBtn"
                class="video-btn video-btn-center pointer-events-auto flex items-center justify-center h-12 w-12 sm:h-16 sm:w-16 rounded-full text-white transition-all duration-300 hover:scale-110 active:scale-95 group opacity-100"
              >
                <div class="relative h-6 w-6 sm:h-8 sm:w-8 text-white">
                  <svg
                    id="iconPlay"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="absolute inset-0 h-full w-full transition-opacity duration-300 group-hover:scale-110"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M4.5 5.653c0-1.426 1.529-2.33 2.779-1.643l11.54 6.348c1.295.712 1.295 2.573 0 3.285L7.28 19.991c-1.25.687-2.779-.217-2.779-1.643V5.653z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <svg
                    id="iconPause"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="absolute inset-0 h-full w-full opacity-0 transition-opacity duration-300 group-hover:scale-110"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M6.75 5.25a.75.75 0 01.75-.75H9a.75.75 0 01.75.75v13.5a.75.75 0 01-.75.75H7.5a.75.75 0 01-.75-.75V5.25zm7.5 0A.75.75 0 0115 4.5h1.5a.75.75 0 01.75.75v13.5a.75.75 0 01-.75.75H15a.75.75 0 01-.75-.75V5.25z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Blend Hero into TrustedBy background to remove seam -->
  <div class="hero-bottom-fade" aria-hidden="true"></div>
</section>

<!-- Hover logic (Astro-safe) -->
<script is:inline>
  // Video Hover Logic & 3D Tilt
  const wrap = document.getElementById("videoTiltContainer");
  const video = document.getElementById("heroVideo");
  const ambientVideo = document.getElementById("ambientVideo");
  const tiltContainer = document.getElementById("videoTiltContainer");
  const muteBtn = document.getElementById("muteToggle");
  const centerPlayBtn = document.getElementById("centerPlayBtn");
  const iconPlay = document.getElementById("iconPlay");
  const iconPause = document.getElementById("iconPause");

  if (wrap && video && muteBtn) {
    const isTouch = window.matchMedia("(hover: none)").matches;
    const isHoverCapable = window.matchMedia("(hover: hover)").matches;
    let controlsTimer = null;

    const showControls = () => {
      wrap.classList.add("controls-visible");
      if (isTouch) {
        if (controlsTimer) window.clearTimeout(controlsTimer);
        if (!video.paused) {
          controlsTimer = window.setTimeout(() => {
            wrap.classList.remove("controls-visible");
          }, 1400);
        }
      }
    };

    const hideControls = () => {
      wrap.classList.remove("controls-visible");
    };

    // Toggle Mute
    muteBtn.addEventListener("click", (e) => {
      e.stopPropagation();
      video.muted = !video.muted;

      const iconMuted = document.getElementById("iconMuted");
      const iconUnmuted = document.getElementById("iconUnmuted");
      const muteText = document.getElementById("muteText");

      if (video.muted) {
        iconMuted.classList.remove("opacity-0");
        iconUnmuted.classList.add("opacity-0");
        if (muteText) muteText.textContent = "Sound On";
      } else {
        iconMuted.classList.add("opacity-0");
        iconUnmuted.classList.remove("opacity-0");
        if (muteText) muteText.textContent = "Sound Off";
      }
    });

    const syncPlayUi = () => {
      if (!iconPlay || !iconPause) return;
      if (video.paused) {
        iconPlay.classList.remove("opacity-0");
        iconPause.classList.add("opacity-0");
      } else {
        iconPlay.classList.add("opacity-0");
        iconPause.classList.remove("opacity-0");
      }
    };

    // Single Play/Pause Toggle Button
    if (centerPlayBtn) {
      centerPlayBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        if (video.paused) {
          video.play();
        } else {
          video.pause();
        }
        showControls();
      });
    }

    // Only enable hover-to-play on desktop
    if (isHoverCapable) {
      let isHovering = false;

      // Ensure the video is reset until hover
      video.pause();
      video.load();

      wrap.addEventListener("mouseenter", async () => {
        isHovering = true;
        showControls();
        try {
          if (ambientVideo) {
            ambientVideo.play();
          }
          await video.play();
          // If user left while play() was initializing, stop it immediately
          if (!isHovering) {
            video.pause();
            video.load();
            if (ambientVideo) {
              ambientVideo.pause();
              ambientVideo.load();
            }
          }
        } catch (e) {
          // Abort errors are expected if mouseleave happens quickly
        }
      });

      wrap.addEventListener("mouseleave", () => {
        isHovering = false;
        video.pause();
        video.load(); // Restores the poster image
        if (ambientVideo) {
          ambientVideo.pause();
          ambientVideo.load();
        }
        hideControls();
      });
    }

    if (isTouch) {
      wrap.addEventListener(
        "touchstart",
        () => {
          showControls();
        },
        { passive: true },
      );
    }

    // Sync ambient video
    video.addEventListener("timeupdate", () => {
      if (
        ambientVideo &&
        Math.abs(ambientVideo.currentTime - video.currentTime) > 0.3
      ) {
        ambientVideo.currentTime = video.currentTime;
      }
    });

    // Auto-update UI on Play/Pause events
    video.addEventListener("play", () => {
      if (ambientVideo) ambientVideo.play();
      syncPlayUi();
      if (isTouch) {
        showControls();
      }
    });

    video.addEventListener("pause", () => {
      if (ambientVideo) ambientVideo.pause();
      syncPlayUi();
      showControls();
    });

    // Ensure correct icon on load/autoplay
    syncPlayUi();

    if (isTouch) {
      // Mobile: Autoplay manually since attribute was removed
      video.play().catch(() => {
        showControls(); // Show controls if autoplay fails
      });
    } else {
      // Desktop: Show controls if paused (should be paused initially)
      if (video.paused) showControls();
    }
  }

  // 3D Tilt Logic - Desktop Only
  if (tiltContainer && window.matchMedia("(hover: hover)").matches) {
    const shine = document.createElement("div"); // Ensure shine exists or reference it if defined elsewhere?
    // Wait, previous code referenced 'shine' but I don't see it defined in the snippet I viewed.
    // It might be implicitly global or missing. I'll check lines 112+ or just stick to safe access.
    // Actually, line 353 used 'shine'. I'll assume it's set up or just remove the check if it's cleaner.
    // I'll be safe and add the event listener if tiltContainer exists.
    // I need to find where 'shine' comes from. It's likely undefined in my snippet view, creating a bug if I don't fix it.
    // I will try to select it.

    document.addEventListener("mousemove", (e) => {
      const shine = document.querySelector(".shine-overlay");
      
      if (!shine) return; // Exit if shine element doesn't exist
      
      const { clientX, clientY } = e;
      const width = window.innerWidth;
      const height = window.innerHeight;

      // Calculate percentage from center (-1 to 1)
      const xPct = (clientX / width - 0.5) * 2;
      const yPct = (clientY / height - 0.5) * 2;

      // Tilt intensity
      const tiltX = yPct * -2; // Rotate X axis (up/down looking)
      const tiltY = xPct * 2; // Rotate Y axis (left/right looking)

      tiltContainer.style.transform = `perspective(1000px) rotateX(${tiltX}deg) rotateY(${tiltY}deg)`;

      // I'll omit the shine logic if I don't see the element, to prevent errors.
      // Or I can leave it out if the user wants to remove hover animation on mobile primarily.
    });
  }
</script>

