---
/**
 * THE EVIDENCE VAULT (Portfolio)
 * - "Shocking" layout: Vertical 9:16 Reels + "Declassified" Strategy Documents.
 * - Masonry-style grid (CSS Grid).
 * - Immersive interactions.
 */

const items = [
  {
    type: "reel",
    title: "Viral Hook Formula",
    client: "Alex Hormozi Style",
    views: "4.2M",
    video: "#", // Placeholder for now
    thumb: "https://images.unsplash.com/photo-1611162617474-5b21e879e113?q=80&w=1000&auto=format&fit=crop",
    colSpan: "col-span-1",
    rowSpan: "row-span-2"
  },
  {
    type: "strategy",
    title: "The Authority Logic",
    client: "System Architecture",
    desc: "Declassified roadmap for generating inbound leads.",
    thumb: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&w=1600&q=80",
    colSpan: "col-span-2",
    rowSpan: "row-span-1"
  },
   {
    type: "reel",
    title: "Retention Edit",
    client: "High-Pace VSL",
    views: "1.8M",
    video: "#",
    thumb: "https://images.unsplash.com/photo-1535016120720-40c6874c3b1c?auto=format&fit=crop&w=1000&q=80",
    colSpan: "col-span-1",
    rowSpan: "row-span-2"
  },
  {
    type: "strategy",
    title: "Vibe Coding",
    client: "Design System",
    desc: "Visual language that screams premium.",
    thumb: "https://images.unsplash.com/photo-1600607686527-6fb886090705?auto=format&fit=crop&w=1600&q=80",
    colSpan: "col-span-2",
    rowSpan: "row-span-1"
  }
];
---

<section id="work" class="relative py-32 bg-zinc-950 overflow-hidden">
  <!-- Dynamic Background - "War Room" Ambience -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-zinc-900 via-zinc-950 to-zinc-950 opacity-80"></div>
  <div class="absolute w-full h-full top-0 left-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-[0.05] mix-blend-overlay pointer-events-none"></div>

  <!-- Content Container -->
  <div class="w-full px-[13%] relative z-10">
    
    <!-- "Shocking" Header -->
    <div class="mb-20 flex flex-col md:flex-row items-end justify-between gap-6">
      <div>
        <div class="inline-flex items-center gap-2 mb-4">
             <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
             <span class="text-xs font-bold tracking-[0.3em] text-red-500/80 uppercase font-body">Confidential // Eyes Only</span>
        </div>
        <h2 class="text-6xl md:text-8xl font-heading font-light text-white leading-[0.85] tracking-tight">
          Evidence <br />
          <span class="text-lime-400 font-serif italic">Vault.</span>
        </h2>
      </div>
      <p class="max-w-md text-zinc-400 font-body text-lg text-right hidden md:block">
        Review the raw files. <br />
        <span class="text-white">Warning: Results may incite jealousy.</span>
      </p>
    </div>

    <!-- The Vault Grid (Masonry-ish) -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 auto-rows-[300px]">
      
      {items.map((item) => (
        item.type === 'reel' ? (
            /* === VERTICAL REEL CARD === */
            <div class={`group relative rounded-2xl overflow-hidden bg-zinc-900 border border-white/5 ${item.colSpan} ${item.rowSpan}`}>
                <!-- Reel Placeholder / Thumbnail -->
                <img 
                    src={item.thumb} 
                    alt={item.title} 
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110 opacity-60 group-hover:opacity-100"
                />
                
                <!-- HUD Overlay -->
                <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black/90"></div>
                
                <!-- Play Button (Center) -->
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="w-16 h-16 rounded-full bg-white/10 backdrop-blur-md flex items-center justify-center border border-white/20">
                         <svg class="w-6 h-6 text-white fill-white" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                    </div>
                </div>

                <!-- Stats HUD -->
                <div class="absolute top-4 right-4 flex flex-col items-end gap-1">
                    <span class="text-[10px] uppercase tracking-widest text-white/50 font-body">Views</span>
                    <span class="text-xl font-bold font-heading text-lime-400">{item.views}</span>
                </div>

                <!-- Bottom Info -->
                <div class="absolute bottom-6 left-6 right-6 translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                     <span class="inline-block px-2 py-1 mb-2 text-[10px] font-bold text-black bg-lime-400 rounded-sm uppercase tracking-wider">
                        Reel
                     </span>
                     <h3 class="text-2xl font-heading text-white leading-none">{item.title}</h3>
                </div>
            </div>
        ) : (
            /* === STRATEGY DOSSIER CARD === */
            <div class={`group relative rounded-2xl overflow-hidden bg-zinc-900 border border-white/5 ${item.colSpan} ${item.rowSpan} group-hover:border-lime-400/30 transition-colors duration-500`}>
                <!-- Texture/Paper bg -->
                <div class="absolute inset-0 bg-[#0a0a0a]"></div>
                
                <!-- Abstract "Data" Visuals -->
                <div class="absolute inset-0 opacity-40 group-hover:opacity-20 transition-opacity duration-500">
                    <div class="absolute top-0 right-0 p-8">
                         <div class="w-32 h-32 border border-white/10 rounded-full border-dashed animate-spin-slow"></div>
                    </div>
                     <div class="absolute bottom-0 left-0 w-full h-1/2 bg-gradient-to-t from-lime-900/10 to-transparent"></div>
                </div>

                 <!-- Thumbnail (blended) -->
                <img 
                    src={item.thumb} 
                    alt={item.title} 
                    class="absolute right-0 top-0 w-2/3 h-full object-cover opacity-20 group-hover:opacity-40 transition-opacity duration-500 mix-blend-luminosity mask-image-linear-to-l" 
                    style="-webkit-mask-image: linear-gradient(to left, black, transparent);"
                />

                <div class="relative z-10 p-8 h-full flex flex-col justify-between">
                    <div>
                         <div class="flex items-center gap-2 mb-4 opacity-50">
                            <svg class="w-4 h-4 text-lime-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                            <span class="text-xs font-mono text-white/70 tracking-widest uppercase">Strategy_Doc_v4.pdf</span>
                        </div>
                        <h3 class="text-3xl font-heading text-white max-w-xs">{item.title}</h3>
                        <p class="mt-2 text-zinc-500 font-body text-sm max-w-xs">{item.desc}</p>
                    </div>

                    <div class="flex items-center gap-2">
                        <span class="text-xs font-bold text-lime-400 uppercase tracking-widest border-b border-lime-400 hover:text-white hover:border-white transition-colors cursor-pointer">
                            Access File
                        </span>
                    </div>
                </div>
            </div>
        )
      ))}

    </div>

    <!-- CTA -->
    <div class="mt-20 flex justify-center">
        <a href="#book" class="group relative px-8 py-4 bg-lime-400 text-black font-bold text-lg rounded-full overflow-hidden">
            <span class="relative z-10 group-hover:text-black transition-colors">Start Audit</span>
            <div class="absolute inset-0 bg-white translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-[cubic-bezier(0.23,1,0.32,1)]"></div>
        </a>
    </div>

  </div>
</section>

<style>
    .animate-spin-slow {
        animation: spin 10s linear infinite;
    }
    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>
