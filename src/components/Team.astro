<section class="team-section relative py-32 bg-white overflow-hidden" id="team">
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,700;0,900;1,700&family=Outfit:wght@300;400;500;600;700&display=swap");

        .font-playfair {
            font-family: "Playfair Display", serif;
        }
        .font-outfit {
            font-family: "Outfit", sans-serif;
        }

        /* Essential Scroll Reveal Base */
        .reveal-item {
            opacity: 0;
            transform: translateY(40px);
            transition: all 1.2s cubic-bezier(0.19, 1, 0.22, 1);
        }

        .reveal-item.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Image Hover Effect */
        .team-card-image {
            transition: transform 1.5s cubic-bezier(0.19, 1, 0.22, 1);
        }
        .team-card:hover .team-card-image {
            transform: scale(1.08);
        }

        /* Staggered Reveal Delays */
        .delay-1 {
            transition-delay: 100ms;
        }
        .delay-2 {
            transition-delay: 250ms;
        }
        .delay-3 {
            transition-delay: 400ms;
        }
        .delay-4 {
            transition-delay: 550ms;
        }
    </style>

    <div class="relative z-10 max-w-[94%] mx-auto px-6 md:px-12">
        <!-- Header: Minimalist Editorial Style -->
        <div
            class="flex flex-col md:flex-row justify-between items-end gap-12 mb-16 reveal-item"
        >
            <div class="max-w-2xl">
                <p
                    class="font-outfit text-lime-600 font-bold uppercase tracking-[0.2em] text-sm mb-6"
                >
                    Our Creative Force
                </p>
                <h2
                    class="text-6xl md:text-8xl font-playfair font-black text-zinc-900 leading-[0.9] tracking-tight"
                >
                    The <span class="italic font-normal">Minds</span> Behind Cinemora
                </h2>
            </div>
            <div class="max-w-xs pb-4">
                <p class="font-outfit text-zinc-500 leading-relaxed text-lg">
                    A collective of visionaries, designers, and developers
                    crafting the future of premium content.
                </p>
            </div>
        </div>

        <!-- Editorial Grid -->
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8"
        >
            <!-- Team Member 1 -->
            <div class="team-card reveal-item delay-1 flex flex-col group">
                <div
                    class="relative aspect-[3/4] overflow-hidden rounded-[2rem] bg-zinc-100 mb-8 border border-zinc-100"
                >
                    <img
                        src="https://framerusercontent.com/images/V0M3J8BygkAJWol7DpZzVLVD3PI.png?scale-down-to=512"
                        alt="Marker Villa"
                        class="team-card-image w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
                        loading="lazy"
                    />
                </div>
                <div class="mt-auto">
                    <div
                        class="text-lime-600 font-outfit font-bold uppercase tracking-widest text-xs mb-3"
                    >
                        CEO & Founder
                    </div>
                    <h3
                        class="text-4xl font-playfair font-black text-zinc-900 mb-4 group-hover:text-lime-600 transition-colors"
                    >
                        Marker Villa
                    </h3>
                    <p
                        class="font-outfit text-zinc-400 text-sm leading-relaxed max-w-[200px]"
                    >
                        Strategic lead & Visionary builder.
                    </p>
                </div>
            </div>

            <!-- Team Member 2 -->
            <div
                class="team-card reveal-item delay-2 flex flex-col group lg:mt-16"
            >
                <div
                    class="relative aspect-[3/4] overflow-hidden rounded-[2rem] bg-zinc-100 mb-8 border border-zinc-100"
                >
                    <img
                        src="https://framerusercontent.com/images/MXGhdOCjqMV4qWQWzwqR64ap4CE.png?scale-down-to=512"
                        alt="Haden Molk"
                        class="team-card-image w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
                        loading="lazy"
                    />
                </div>
                <div class="mt-auto">
                    <div
                        class="text-lime-600 font-outfit font-bold uppercase tracking-widest text-xs mb-3"
                    >
                        UI/UX Designer
                    </div>
                    <h3
                        class="text-4xl font-playfair font-black text-zinc-900 mb-4 group-hover:text-lime-600 transition-colors"
                    >
                        Haden Molk
                    </h3>
                    <p
                        class="font-outfit text-zinc-400 text-sm leading-relaxed max-w-[200px]"
                    >
                        Experience Architect & Digital Artist.
                    </p>
                </div>
            </div>

            <!-- Team Member 3 -->
            <div class="team-card reveal-item delay-3 flex flex-col group">
                <div
                    class="relative aspect-[3/4] overflow-hidden rounded-[2rem] bg-zinc-100 mb-8 border border-zinc-100"
                >
                    <img
                        src="https://framerusercontent.com/images/2SG2YtGYMAFSLxtZQdyf06GJeU.png?scale-down-to=512"
                        alt="Christin Harish"
                        class="team-card-image w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
                        loading="lazy"
                    />
                </div>
                <div class="mt-auto">
                    <div
                        class="text-lime-600 font-outfit font-bold uppercase tracking-widest text-xs mb-3"
                    >
                        Lead Developer
                    </div>
                    <h3
                        class="text-4xl font-playfair font-black text-zinc-900 mb-4 group-hover:text-lime-600 transition-colors"
                    >
                        Christin Harish
                    </h3>
                    <p
                        class="font-outfit text-zinc-400 text-sm leading-relaxed max-w-[200px]"
                    >
                        System architect & Code perfectionist.
                    </p>
                </div>
            </div>

            <!-- Team Member 4 -->
            <div
                class="team-card reveal-item delay-4 flex flex-col group lg:mt-16"
            >
                <div
                    class="relative aspect-[3/4] overflow-hidden rounded-[2rem] bg-zinc-100 mb-8 border border-zinc-100"
                >
                    <img
                        src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?q=80&w=2864&auto=format&fit=crop"
                        alt="Diallyl Elana"
                        class="team-card-image w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
                        loading="lazy"
                    />
                </div>
                <div class="mt-auto">
                    <div
                        class="text-lime-600 font-outfit font-bold uppercase tracking-widest text-xs mb-3"
                    >
                        Marketing lead
                    </div>
                    <h3
                        class="text-4xl font-playfair font-black text-zinc-900 mb-4 group-hover:text-lime-600 transition-colors"
                    >
                        Diallyl Elana
                    </h3>
                    <p
                        class="font-outfit text-zinc-400 text-sm leading-relaxed max-w-[200px]"
                    >
                        Growth strategist & Brand builder.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Minimalist Scroll Animation Script -->
    <script>
        const observerOptions = {
            threshold: 0.1,
            rootMargin: "0px 0px -50px 0px",
        };

        const revealObserver = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("is-visible");
                }
            });
        }, observerOptions);

        document.querySelectorAll(".reveal-item").forEach((item) => {
            revealObserver.observe(item);
        });
    </script>
</section>
