---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import PricingSection from "../components/Pricing.astro";
import ClientReviews from "../components/ClientReviews.astro";
import BookCall from "../components/BookCall.astro";
import Footer from "../components/Footer.astro";
---

<Layout
    title="Investment | Cinemora Studios"
    description="Transparent pricing packages for high-growth founders."
>
    <Navbar />
    <main class="pt-20">
        <div class="px-4 py-20 text-center">
            <h1 class="font-heading text-5xl md:text-7xl text-white mb-6">
                Investment
            </h1>
            <p class="font-body text-zinc-400 text-xl max-w-2xl mx-auto">
                Choose the partnership tier that matches your ambition.
            </p>
        </div>
        <PricingSection />
        <ClientReviews />
        <BookCall />
    </main>
    <Footer />
</Layout>
